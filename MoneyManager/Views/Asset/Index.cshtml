@model IEnumerable<Asset>

@{
    ViewData["Title"] = "Assets";
}

<h1>Assets for @ViewBag.User.Name</h1>
<a asp-area="" asp-controller="Asset" asp-action="Create" asp-route-userId="@ViewBag.User.UserId">Create new asset</a>
<hr/>

<table>
    <tr>
        <th>#</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Balance)</th>
    </tr>
    @{
        var i = 1;
        foreach (var asset in Model)
        {
            <tr>
                <td>@i</td>
                <td>@asset.Name</td>
                <td>@asset.Balance</td>
                <td></td>
            </tr>
            i++;
        }
    }
</table>

<div>
    <a asp-controller="User" asp-action="Details" asp-route-userId="@ViewBag.User.UserId">Back to User</a>
</div>